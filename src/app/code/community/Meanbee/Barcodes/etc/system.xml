<?xml version="1.0" encoding="UTF-8"?>
<config>
    <sections>
        <meanbee_barcodes translate="label" module="meanbee_barcodes">
            <label>Meanbee: Barcodes</label>
            <tab>sales</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1200</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <annotator translate="label" module="meanbee_barcodes">
                    <label>Annotator</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <active translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </active>
                        <order_number_barcode_symbology translate="label">
                            <label>Order Number Barcode Symbology</label>
                            <frontend_type>select</frontend_type>
                            <source_model>meanbee_barcodes/config_source_annotatorBarcodeSymbology</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </order_number_barcode_symbology>
                        <invoice_number_barcode_symbology translate="label">
                            <label>Invoice Number Barcode Symbology</label>
                            <frontend_type>select</frontend_type>
                            <source_model>meanbee_barcodes/config_source_annotatorBarcodeSymbology</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </invoice_number_barcode_symbology>
                        <shipment_number_barcode_symbology translate="label">
                            <label>Shipment Number Barcode Symbology</label>
                            <frontend_type>select</frontend_type>
                            <source_model>meanbee_barcodes/config_source_annotatorBarcodeSymbology</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </shipment_number_barcode_symbology>
                        <creditmemo_number_barcode_symbology translate="label">
                            <label>Credit Memo Number Barcode Symbology</label>
                            <frontend_type>select</frontend_type>
                            <source_model>meanbee_barcodes/config_source_annotatorBarcodeSymbology</source_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </creditmemo_number_barcode_symbology>
                        <product_sku_barcode_symbology translate="label">
                            <label>Product SKU Barcode Symbology</label>
                            <frontend_type>select</frontend_type>
                            <source_model>meanbee_barcodes/config_source_annotatorBarcodeSymbology</source_model>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </product_sku_barcode_symbology>
                    </fields>
                </annotator>
                <reader translate="label" module="meanbee_barcodes">
                    <label>Reader</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>200</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <active translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </active>
                        <enabled_symbology translate="label">
                            <label>Enabled Barcode Symbologies</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>meanbee_barcodes/config_source_readerBarcodeSymbology</source_model>
                            <comment>The greater number of enabled symbologies, the greater the change of false positive readings.</comment>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled_symbology>
                    </fields>
                </reader>
            </groups>
        </meanbee_barcodes>
    </sections>
</config>